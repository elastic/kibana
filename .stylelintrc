plugins:
  - stylelint-scss
rules:
  number-leading-zero: never
  color-hex-case: upper
  string-quotes: single
  indentation: 2
  declaration-block-no-duplicate-properties:
    - true
    # We use some rare duplicate property values for browser variance
    - ignoreProperties:
      - font-size
      - word-break
      # TODO: triage needed for:
      - background
      - composes
      - text-align
      - filter
      - transition
      - width
      - display

  # ($var / 2) rather than ($var/2)
  function-calc-no-unspaced-operator: true

  # something { not something{
  block-opening-brace-space-before: always

  # TODO: # Allows input[type=search]
  # selector-no-qualifying-type:
  #   - true
  #   - ignore:
  #     - attribute

  # TODO; Put a line-break between sections of CSS, but allow quicky one-liners for legibility
  # rule-empty-line-before:
  #   - always-multi-line
  #   - except:
  #     - inside-block-and-after-rule