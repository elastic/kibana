{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "target_types",
    "stripInternal": true,
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
  ],
  "exclude": [
    "types/**/*",
    "**/__fixtures__/**/*"
  ],
  "kbn_references": [
    "@kbn/dev-utils",
    "@kbn/std",
    "@kbn/utils",
    "@kbn/tooling-log",
    "@kbn/bazel-packages",
    "@kbn/get-repo-files",
    "@kbn/ftr-screenshot-filename",
    "@kbn/peggy"
  ]
}
