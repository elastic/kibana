{
  "extends": "../../tsconfig.base.json",
  "include": [
    "types/**/*",
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "types/ftr_globals/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./target/types",
    "types": [
      "jest",
      "node"
    ],
    "stripInternal": true,
    "declarationMap": true
  }
}
