{
  "extends": "<%- relativePathTo("tsconfig.bazel.json") %>",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "target_types",
    "stripInternal": false,
    "types": [
    <%_ if (pkg.web) { _%>
      "jest",
      "node",
      "react"
    <%_ } else { _%>
      "jest",
      "node"
    <%_ } _%>
    ]
  },
  "include": [
    "**/*.ts",
    <%_ if (pkg.web) { _%>
      "**/*.tsx",
    <%_ } _%>
  ]
}
