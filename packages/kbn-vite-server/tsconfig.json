{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["target/**/*", "scripts/**/*"]
}
