{
  "query": {
    "bool": {
      "must": [
        {
          "range": {
            "@timestamp": {
              "lt": "now-3h"
            }
          }
        },
        {
          "bool": {
            "should": [
              {
                "exists": {
                  "field": "host.name"
                }
              },
              {
                "exists": {
                  "field": "host.entity.name"
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ],
      "must_not": [
        {
          "terms": {
            "_tier": ["cold", "frozen"]
          }
        }
      ]
    }
  }
}

