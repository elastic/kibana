                },
                "technique": [
                    {
                        "id": "T1497",
                        "name": "Virtualization/Sandbox Evasion",
                        "reference": "https://attack.mitre.org/techniques/T1497/"
                    }
                ]
            }
        ],
        "timestamp_override": "event.ingested",
