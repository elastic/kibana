# -*- yaml -*-
---
env:
  node: true

rules:
  quotes:
  - 2
  - single
  - avoid-escape
  global-strict:
  - 2
  - always
  space-in-brackets: 2
  space-in-parens: 2
  space-after-keywords:
  - 2
  - always
  - { checkFunctionKeyword: true }
  space-before-blocks: 2
  space-unary-ops: 2
  brace-style: 2
  comma-style: 2
  func-style:
  - 2
  - declaration
  no-lonely-if: 2
  no-trailing-spaces: 2
  no-multiple-empty-lines: 2
  max-len: 2
  padded-blocks:
  - 2
  - never
