%div
  .row-fluid
    .span3
      %label.small Style
      %select.input-small{"ng-model" => "panel.chart", "ng-options" => "f for f in ['bar','pie','list','total']"}
    .span2{"ng-show" => "panel.chart == 'total' || panel.chart == 'list'"}
      %label.small Font Size
      %select.input-mini{"ng-model" => "panel.style['font-size']", "ng-options" => "f for f in ['7pt','8pt','9pt','10pt','12pt','14pt','16pt','18pt','20pt','24pt','28pt','32pt','36pt','42pt','48pt','52pt','60pt','72pt']"}
    .span3{"ng-show" => "panel.chart == 'bar' || panel.chart == 'pie'"}
      %label.small Legend
      %select.input-small{"ng-model" => "panel.counter_pos", "ng-options" => "f for f in ['above','below','none']"}
    .span3{"ng-show" => "panel.chart != 'total' &amp;&amp; panel.counter_pos != 'none'"}
      %label.small List Format
      %select.input-small{"ng-model" => "panel.arrangement", "ng-options" => "f for f in ['horizontal','vertical']"}
    .span1{"ng-show" => "panel.chart == \"pie\""}
      %label.small Donut
      %input{"ng-checked" => "panel.donut", "ng-model" => "panel.donut", :type => "checkbox"}/
    .span1{"ng-show" => "panel.chart == \"pie\""}
      %label.small Tilt
      %input{"ng-checked" => "panel.tilt", "ng-model" => "panel.tilt", :type => "checkbox"}/
    .span1{"ng-show" => "panel.chart == \"pie\""}
      %label.small Labels
      %input{"ng-checked" => "panel.labels", "ng-model" => "panel.labels", :type => "checkbox"}/
  %h5 Queries
  .row-fluid
    .span3
      %form{:style => "margin-bottom: 0px"}
        %label.small Label
        %input{"ng-model" => "newlabel", :placeholder => "New Label", :style => "width:70%", :type => "text"}/
    .span8
      %form.input-append{:style => "margin-bottom: 0px"}
        %label.small Query
        %input{"ng-model" => "newquery", :placeholder => "New Query", :style => "width:80%", :type => "text"}/
        %button.btn{"ng-click" => "add_query(newlabel,newquery);newlabel='';newquery='';set_refresh(true)"}
          %i.icon-plus
    .span1
  .row-fluid{"ng-repeat" => "q in panel.query"}
    .span3
      %form{:style => "margin-bottom: 0px"}
        %input{"ng-change" => "set_refresh(true)", "ng-model" => "q.label", :style => "width:70%", :type => "text"}/
    .span8
      %form.input-append{:style => "margin-bottom: 0px"}
        %input{"ng-change" => "set_refresh(true)", "ng-model" => "q.query", :style => "width:80%", :type => "text"}/
        %button.btn{"ng-click" => "get_data()"}
          %i.icon-search
    .span1
      %i.icon-remove.pointer{"ng-click" => "remove_query(q)"}
