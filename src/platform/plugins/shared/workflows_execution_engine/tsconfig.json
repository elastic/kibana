{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "outDir": "target/types"
  },
  "include": [
    "index.ts",
    "common/**/*",
    "public/**/*",
    "server/**/*",
    "../../../../../typings/**/*",
    ".storybook/**/*",
    "integration_tests/**/*"
  ],
  "kbn_references": [
    "@kbn/core",
    "@kbn/config-schema",
    "@kbn/actions-plugin",
    "@kbn/workflows",
    "@kbn/task-manager-plugin",
    "@kbn/es-query",
    "@kbn/datemath",
    "@kbn/core-elasticsearch-server",
    "@kbn/cloud-plugin",
    "@kbn/utility-types",
    "@kbn/zod",
    "@kbn/core-data-streams-server",
    "@kbn/data-streams",
    "@kbn/es-mappings",
    "@kbn/workflows-extensions",
    "@kbn/licensing-plugin",
    "@kbn/logging-mocks",
  ],
  "exclude": [
    "target/**/*"
  ]
}
