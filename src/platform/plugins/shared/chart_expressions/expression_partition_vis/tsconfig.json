  "compilerOptions": {
    "outDir": "target/types",
    "isolatedModules": true
  },
  "include": [
    "common/**/*",
    "public/**/*",
    "server/**/*",
  ],
  "kbn_references": [
    "@kbn/core",
    "@kbn/expressions-plugin",
    "@kbn/usage-collection-plugin",
