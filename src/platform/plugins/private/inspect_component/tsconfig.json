  "kbn_references": [
    "@kbn/react-kibana-mount",
    "@kbn/core",
    "@kbn/i18n",
    "@kbn/i18n-react",
    "@kbn/config-schema",
    "@kbn/repo-info",
    "@kbn/core-http-router-server-mocks",
    "@kbn/test-jest-helpers",
    "@kbn/logging",
    "@kbn/developer-toolbar-plugin",
    "@kbn/shared-ux-utility"
  ]
}
