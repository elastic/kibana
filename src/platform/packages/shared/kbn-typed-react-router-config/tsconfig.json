{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "target/types",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "kbn_references": [
    "@kbn/io-ts-utils",
    "@kbn/shared-ux-router",
    "@kbn/core",
    "@kbn/kibana-react-plugin",
  ],
  "exclude": [
    "target/**/*",
  ]
}
