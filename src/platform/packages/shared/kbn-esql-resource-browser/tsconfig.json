{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "outDir": "target/types",
    "types": [
      "jest",
      "node",
      "react"
    ]
  },
  "include": [
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "target/**/*"
  ],
  "kbn_references": [
    "@kbn/i18n",
    "@kbn/esql-types",
    "@kbn/esql-utils",
    "@kbn/esql-language",
    "@kbn/react-field",
    "@kbn/field-utils",
    "@kbn/projects-solutions-groups",
    "@kbn/core",
    "@kbn/licensing-types",
  ]
}
