load("@build_bazel_rules_nodejs//:index.bzl", "js_library")

SRCS = glob(
  [
    "**/*.ts",
    "**/*.tsx",
  ],
  exclude = [
    "**/test_helpers.ts",
    "**/*.config.js",
    "**/*.mock.*",
    "**/*.test.*",
    "**/*.stories.*",
    "**/__snapshots__/**",
    "**/integration_tests/**",
    "**/mocks/**",
    "**/scripts/**",
    "**/storybook/**",
    "**/test_fixtures/**",
    "**/test_helpers/**",
  ],
)

DEPS = [
  "@npm//react",
  "@npm//react-redux",
  "@npm//redux",
  "@npm//@reduxjs/toolkit",
]

js_library(
  name = "state",
  package_name = "@kbn/core-workspace-state",
  srcs = ["package.json"] + SRCS,
  deps = DEPS,
  visibility = ["//visibility:public"],
)
