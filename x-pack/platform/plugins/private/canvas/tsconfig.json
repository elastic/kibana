{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "outDir": "target/types",

    // the plugin contains some heavy json files
    "resolveJsonModule": false,
    // there is still a decent amount of JS in this plugin and we are taking
    // advantage of the fact that TS doesn't know the types of that code and
    // gives us `any`. Once that code is converted to .ts we can remove this
    // and allow TS to infer types from any JS file imported.
    "allowJs": false
  },
  "include": [
    "*.ts",
    "../../../../../typings/**/*",
    "__fixtures__/**/*",
    "canvas_plugin_src/**/*",
    "common/**/*",
    "i18n/**/*",
    "public/**/*",
    "server/**/*",
    "storybook/**/*",
    "tasks/mocks/*",
    "types/**/*"
  ],
  "kbn_references": [
    "@kbn/core",
    "@kbn/charts-plugin",
    "@kbn/data-plugin",
    "@kbn/share-plugin",
    "@kbn/embeddable-plugin",
    "@kbn/expressions-plugin",
    "@kbn/home-plugin",
    "@kbn/inspector-plugin",
    "@kbn/kibana-react-plugin",
    "@kbn/kibana-utils-plugin",
    "@kbn/presentation-util-plugin",
    "@kbn/ui-actions-plugin",
    "@kbn/usage-collection-plugin",
    "@kbn/features-plugin",
    "@kbn/lens-plugin",
    "@kbn/maps-plugin",
    "@kbn/reporting-plugin",
    "@kbn/spaces-plugin",
    "@kbn/handlebars",
    "@kbn/interpreter",
    "@kbn/tinymath",
    "@kbn/coloring",
    "@kbn/es-query",
    "@kbn/utility-types",
    "@kbn/datemath",
    "@kbn/field-formats-plugin",
    "@kbn/monaco",
    "@kbn/i18n-react",
    "@kbn/i18n",
    "@kbn/data-views-plugin",
    "@kbn/expect",
    "@kbn/analytics",
    "@kbn/safer-lodash-set",
    "@kbn/config-schema",
    "@kbn/flot-charts",
    "@kbn/shared-ux-router",
    "@kbn/shared-ux-button-toolbar",
    "@kbn/saved-objects-finder-plugin",
    "@kbn/core-saved-objects-server",
    "@kbn/discover-utils",
    "@kbn/content-management-plugin",
    "@kbn/shared-ux-page-kibana-template",
    "@kbn/reporting-export-types-pdf-common",
    "@kbn/code-editor",
    "@kbn/presentation-publishing",
    "@kbn/react-kibana-context-render",
    "@kbn/search-types",
    "@kbn/visualizations-plugin",
    "@kbn/react-kibana-context-theme",
    "@kbn/shared-ux-error-boundary",
    "@kbn/shared-ux-markdown",
    "@kbn/content-management-utils",
    "@kbn/deeplinks-analytics",
    "@kbn/core-saved-objects-api-server",
    "@kbn/visualizations-common",
    "@kbn/shared-ux-utility"
  ],
  "exclude": ["target/**/*"]
}
