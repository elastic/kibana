{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "outDir": "target/types",
    "types": [
      "jest",
      "node",
      "react",
      "@emotion/react/types/css-prop"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "target/**/*"
  ],
  "kbn_references": [
    "@kbn/i18n",
    "@kbn/monaco",
    "@kbn/streamlang",
    "@kbn/react-hooks",
    "@kbn/code-editor",
    "@kbn/streams-plugin"
  ]
}
