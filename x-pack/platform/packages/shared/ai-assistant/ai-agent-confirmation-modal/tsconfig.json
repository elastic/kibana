{
  "extends": "@kbn/tsconfig-base/tsconfig.json",
  "compilerOptions": {
    "outDir": "target/types",
    "types": [
      "jest",
      "node",
      "react",
      "@emotion/react/types/css-prop",
      "@kbn/ambient-ui-types",
      "@testing-library/jest-dom",
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../../../../../typings/**/*",
  ],
  "exclude": [
    "target/**/*"
  ],
  "kbn_references": [
    "@kbn/i18n",
    "@kbn/i18n-react",
    "@kbn/doc-links",
  ]
}
