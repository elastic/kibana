    "@kbn/expect",
    "@kbn/search-playground",
    "@kbn/tooling-log",
    "@kbn/ftr-common-functional-ui-services",
    "@kbn/core-chrome-browser",
    "@kbn/observability-ai-assistant-plugin",
    "@kbn/inference-common",
    "@kbn/test-suites-src",
    "@kbn/dev-utils",
    "@kbn/cases-plugin",
    "@kbn/serverless-search-settings",
    "@kbn/management-settings-ids",
  ]
