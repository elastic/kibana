        # exclude_lines: ['^DBG']
        # include_lines: ['^ERR', '^WARN']
        # scan_frequency: 10s
        # harvester_limit: 0
        # tail_files: false
        # backoff: 1s
        # max_backoff: 10s
        # backoff_factor: 2
        # close_inactive: 5m
