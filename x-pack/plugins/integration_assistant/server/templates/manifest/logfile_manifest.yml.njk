- input: logfile
  template_path: logfile.yml.hbs
  title: |
    {{ data_stream_title }}
  description: |
    {{ data_stream_description }}
  vars:
    - name: paths
      type: text
      title: Paths
      multi: true
      required: true
      show_user: true
      default:
        - '/test/path'
      description: The full path to the related log file.
    - name: exclude_files
      type: text
      title: Exclude Files
      description: A list of regular expressions to match the files that you want Filebeat to ignore.
      required: false
      show_user: true
      default: 
        - '\.gz$'
    - name: custom
      type: yaml
      title: Additional Log Configuration Options
      description: >
          Configuration options that can be used to further change input configuration. Check the [Filebeat documentation](https://www.elastic.co/guide/en/beats/filebeat/current/filebeat-input-log.html) for more information.
      required: false
      show_user: false
      default: |
        #recursive_glob.enabled: true
        #encoding: plain
        harvester_buffer_size: 16384
        max_bytes: 10485760
