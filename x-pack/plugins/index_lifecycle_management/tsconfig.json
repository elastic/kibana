{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./target/types",
    "emitDeclarationOnly": true,
    "declaration": true,
  },
  "include": [
    "__jest__/**/*",
    "integration_tests/**/*",
    "common/**/*",
    "public/**/*",
    "server/**/*",
    "../../../typings/**/*",
  ],
  "kbn_references": [
    "@kbn/core",
    // required plugins
    "@kbn/licensing-plugin",
    "@kbn/management-plugin",
    "@kbn/features-plugin",
    "@kbn/share-plugin",
    // optional plugins
    "@kbn/cloud-plugin",
    "@kbn/usage-collection-plugin",
    "@kbn/index-management-plugin",
    "@kbn/home-plugin",
    // required bundles
    "@kbn/kibana-react-plugin",
  ]
}
