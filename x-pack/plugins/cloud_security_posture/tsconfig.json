{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "target/types",
  },
  "include": [
    "common/**/*",
    "public/**/*",
    "server/**/*",
    "scripts/**/*",
    // have to declare *.json explicitly due to https://github.com/microsoft/TypeScript/issues/25636
    "server/**/*.json",
    "public/**/*.json",
    "../../../typings/**/*"
  ],
  "kbn_references": [
    "@kbn/core",
    "@kbn/data-plugin",
    "@kbn/navigation-plugin",
    "@kbn/fleet-plugin",
    "@kbn/fleet-plugin",
    "@kbn/task-manager-plugin",
    "@kbn/security-plugin"
  ]
}
