{
  "id": "host_hist",
  "description": "[host.name metrics] grouped by @timestamp and aggregated on host.name",
  "pivot": {
    "group_by": {
      "@timestamp": {
        "date_histogram": {
          "field": "@timestamp",
          "calendar_interval": "1h"
        }
      }
    },
    "aggregations": {
      "metrics.host.name.cardinality": {
        "cardinality": {
          "field": "host.name"
        }
      }
    }
  }
}
