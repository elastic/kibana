hostname = ENV["VMNAME"] || 'ubuntu'

Vagrant.configure("2") do |config|
  config.vm.define "deb" do |deb|
    deb.vm.provider :virtualbox do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
    deb.vm.box = 'ubuntu/jammy64'
    deb.vm.hostname = hostname
  end

  # config.vm.define "arm" do |deb|
  #   deb.vm.box = "perk/ubuntu-2204-arm64"
  #   deb.vm.hostname = hostname
  # end
end
