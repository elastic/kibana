{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./target/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    // add all the folders contains files to be compiled
    "common/**/*",
    "public/**/*",
    "scripts/**/*",
    "server/**/*"
  ],
  "references": [
    { "path": "../../../src/core/tsconfig.json" },
