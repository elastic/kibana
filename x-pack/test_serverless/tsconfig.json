{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "target/types",
    "rootDirs": [".", "../test"],
    "types": ["node", "@kbn/ambient-ftr-types", "cypress", "cypress-file-upload", "cypress-real-events", "cypress-recurse"],
  },
  "include": [
    "**/*",
    "../../typings/**/*",
    "../../packages/kbn-test/types/ftr_globals/**/*",
  ],
  "exclude": [
    "target/**/*",
    "*/plugins/**/*",
    "*/packages/**/*",
    "*/*/packages/**/*",
  ],
  "kbn_references": [
    { "path": "../test/tsconfig.json" },
    "@kbn/expect",
    "@kbn/test",
    "@kbn/cypress-config",
    "@kbn/dev-proc-runner",
  ]
}
