{
  "rule_id": "rule-9999",
  "risk_score": 100,
  "description": "Detecting root and admin users",
  "interval": "5m",
  "name": "Detect Root/Admin Users",
  "severity": "high",
  "type": "filter",
  "from": "now-6m",
  "to": "now",
  "filter": {
    "bool": {
      "should": [
        {
          "bool": {
            "should": [
              {
                "match_phrase": {
                  "user.name": "root"
                }
              }
            ],
            "minimum_should_match": 1
          }
        },
        {
          "bool": {
            "should": [
              {
                "match_phrase": {
                  "user.name": "admin"
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ],
      "minimum_should_match": 1
    }
  }
}
