{
  "title": "Stream",
  "type": "object",
  "description": "A combination of an input type, the required config, an output, and any processors",
  "properties": {
    "id": {
      "type": "string"
    },
    "input": {
      "$ref": "./input.v1.json"
    },
    "config": {
      "type": "object",
      "example": "{paths: \"/var/log/*.log\"} or {metricsets: [\"container\", \"cpu\"]} or {username: \"elastic\", password: \"changeme\"}"
    },
    "output": {
      "$ref": "./output.v1.json"
    },
    "processors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "input",
    "output"
  ]
}
