{
  "extends": "../tsconfig.json",
  "include": [
    "typings/**/*",
    "legacy/common/**/*",
    "legacy/server/**/*",
    "legacy/plugins/**/*",
    "plugins/**/*",
    "test_utils/**/*",
    "tasks/**/*"
  ],
  "exclude": [
    "test/**/*",
    "legacy/plugins/siem/cypress/**/*",
    "legacy/plugins/apm/cypress/**/*",
    "**/typespec_tests.ts"
  ],
  "compilerOptions": {
    "outDir": ".",
    "paths": {
      "kibana/public": ["src/core/public"],
      "kibana/server": ["src/core/server"],
      "ui/*": [
        "src/legacy/ui/public/*"
      ],
      "plugins/xpack_main/*": [
        "x-pack/legacy/plugins/xpack_main/public/*"
      ],
      "plugins/security/*": [
        "x-pack/legacy/plugins/security/public/*"
      ],
      "plugins/spaces/*": [
        "x-pack/legacy/plugins/spaces/public/*"
      ],
      "test_utils/*": [
        "x-pack/test_utils/*"
      ],
      "monitoring/common/*": [
        "x-pack/monitoring/common/*"
      ],
      "plugins/*": ["src/legacy/core_plugins/*/public/"]
    },
    "types": [
      "node",
      "jest"
    ]
  }
}
