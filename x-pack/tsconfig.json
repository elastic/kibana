{
  "extends": "../tsconfig.json",
  "include": [
    "typings/**/*",
    "common/**/*",
    "server/**/*",
    "plugins/**/*",
    "test_utils/**/*"
  ],
  "exclude": [
    "test/**/*",
    "**/typespec_tests.ts"
  ],
  "compilerOptions": {
    "outDir": ".",
    "paths": {
      "ui/*": [
        "src/legacy/ui/public/*"
      ],
      "plugins/xpack_main/*": [
        "x-pack/legacy/plugins/xpack_main/public/*"
      ],
      "plugins/security/*": [
        "x-pack/legacy/plugins/security/public/*"
      ],
      "plugins/spaces/*": [
        "x-pack/legacy/plugins/spaces/public/*"
      ],
      "test_utils/*": [
        "x-pack/test_utils/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  }
}
