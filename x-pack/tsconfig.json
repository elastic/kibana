{
  "extends": "../tsconfig.base.json",
  "include": [
    "mocks.ts",
    "typings/**/*",
    "legacy/common/**/*",
    "legacy/server/**/*",
    "legacy/plugins/**/*",
    "plugins/**/*",
    "test_utils/**/*",
    "tasks/**/*"
  ],
  "exclude": [
    "test/**/*",
    "plugins/security_solution/cypress/**/*",
    "plugins/apm/e2e/cypress/**/*",
    "plugins/apm/scripts/**/*"
  ],
  "compilerOptions": {
    "outDir": ".",
    "paths": {
      "kibana/public": ["src/core/public"],
      "kibana/server": ["src/core/server"],
      "plugins/xpack_main/*": [
        "x-pack/legacy/plugins/xpack_main/public/*"
      ],
      "plugins/spaces/*": [
        "x-pack/legacy/plugins/spaces/public/*"
      ],
      "test_utils/*": [
        "x-pack/test_utils/*"
      ],
      "plugins/*": ["src/legacy/core_plugins/*/public/"],
      "fixtures/*": ["src/fixtures/*"],
    },
    // overhead is too significant
    "incremental": false,
  },
  "references": [
    { "path": "../src/core/tsconfig.json" }
  ]
}
