{
  "type": "index",
  "value": {
    "index": "host_alias",
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "host": {
          "properties": {
            "name": {
              "type": "alias",
              "path": "host_alias.name"
            }
          }
        },
        "host_alias": {
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        }
      }
    },
    "settings": {
      "index": {
        "refresh_interval": "1s",
        "number_of_replicas": "1",
        "number_of_shards": "1"
      }
    }
  }
}
