{
  "type": "index",
  "value": {
    "index": "timestamp_in_seconds",
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "epoch_second"
        }
      }
    },
    "settings": {
      "index": {
        "refresh_interval": "1s",
        "number_of_replicas": "1",
        "number_of_shards": "1"
      }
    }
  }
}
