{
  "type": "index",
  "value": {
    "index": "basic",
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "host": { 
          "properties": {
            "ip" : {
              "type" : "ip"
            },
            "name" : {
              "type" : "keyword",
              "ignore_above" : 1024
            }
          }
        },
        "event": { 
          "properties": {
            "ingested" : {
              "type" : "date"
            }
          }
        }
      }
    },
    "settings": {
      "index": {
        "number_of_replicas": "1",
        "number_of_shards": "1"
      }
    }
  }
}
