{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "target/types",
    "checkJs": true,
    "module": "ESNext"
  },
  "include": [
    "src/**/*.mjs",
    "src/**/*.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "target/**/*",
  ],
  "kbn_references": [
    "@kbn/babel-register",
    "@kbn/babel-transform",
    "@kbn/bazel-packages",
    "@kbn/bazel-runner",
    "@kbn/peggy",
    "@kbn/plugin-discovery",
    "@kbn/repo-info",
    "@kbn/yarn-lock-validator",
    "@kbn/get-repo-files",
    "@kbn/sort-package-json",
    { "path": "../src/dev/tsconfig.json" }
  ]
}
