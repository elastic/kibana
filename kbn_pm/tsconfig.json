{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "target/types",
    "checkJs": true,
    "module": "ESNext"
  },
  "include": [
    "src/**/*.mjs",
    "src/**/*.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "target/**/*",
  ],
  "kbn_references": [
    "@kbn/babel-register",
    "@kbn/repo-info",
    "@kbn/yarn-lock-validator",
    "@kbn/get-repo-files",
    "@kbn/sort-package-json",
    { "path": "../src/dev/tsconfig.json" },
    "@kbn/ci-stats-reporter",
    "@kbn/ts-projects",
    "@kbn/repo-packages"
  ]
}
