{
	"name": "My Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"NODE_VERSION": "20.13.1"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/usr/bin/zsh"
			},
			"extensions": [
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"forwardPorts": [
		9200,
		5601
	],
	"postCreateCommand": "echo 'Container ready!'",
	"remoteUser": "vscode"
}