{
  "query": {
    "bool": {
      "must": [
        {
          "range": {
            "@timestamp": {
              "lt": "now-3h"
            }
          }
        },
        {
          "bool": {
            "should": [
              {
                "bool": {
                  "must": [
                    {
                      "exists": {
                        "field": "host.name"
                      }
                    },
                    {
                      "wildcard": {
                        "host.name": "*"
                      }
                    }
                  ]
                }
              },
              {
                "bool": {
                  "must": [
                    {
                      "exists": {
                        "field": "host.entity.name"
                      }
                    },
                    {
                      "wildcard": {
                        "host.entity.name": "*"
                      }
                    }
                  ]
                }
              }
            ],
            "minimum_should_match": 1
          }
        }
      ],
      "must_not": [
        {
          "terms": {
            "_tier": ["cold", "frozen"]
          }
        }
      ]
    }
  }
}

